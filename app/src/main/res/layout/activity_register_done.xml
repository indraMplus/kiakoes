<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".RegisterDone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="546dp"
        android:layout_margin="12dp"
        android:layout_marginBottom="8dp"
        android:background="@color/bgColor"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btnSaveSql"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView18"
            android:layout_toEndOf="@+id/textView18"
            android:text="*"
            android:textColor="@color/star"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/kiakoelogos" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/textView16"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="Your Location"
            android:textColor="@color/text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginTop="88dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Country"
            android:textColor="@color/rounded"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignTop="@+id/etMobileNo"
            android:fontFamily="@font/source_sans_pro"
            android:text="Mobile No"
            android:textColor="@color/rounded"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMobileNo"
            style="@style/field_style"
            android:layout_width="213dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/spLocation"
            android:layout_marginTop="174dp"
            android:ems="10"
            android:fontFamily="@font/source_sans_pro"
            android:hint="@string/hint_mobile"
            android:inputType="phone"
            android:textColor="@color/text"
            android:textColorHint="@color/txColor"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spLocation"
            style="@style/spinner_style"
            android:layout_width="212dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView16"
            android:entries="@array/array_country"
            android:popupBackground="#a29f9f" />

        <Spinner
            android:id="@+id/spCons"
            style="@style/spinner_style"
            android:layout_width="213dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView22"
            android:entries="@array/array_constituency"
            android:popupBackground="#a29f9f" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginTop="128dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Constituency"
            android:textColor="@color/rounded"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginBottom="68dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgView"
            android:layout_centerHorizontal="true"
            android:text="3 / 3"
            android:textColor="@color/text"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>