<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="horizontal"
    android:padding="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text6"
            android:layout_toEndOf="@+id/textViewSureName"
            android:text="Contituency :"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text8"
            android:text="Date of birth :"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textID"
            android:layout_toEndOf="@+id/text6"
            android:text="User :"
            android:textColor="@color/textcolors"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text9"
            android:text="Gender      :"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text3"
            android:text="Firstname :"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text5"
            android:text="Mobile no  :"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text4"
            android:text="Country :"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text7"
            android:text="Email      :"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text13"
            android:text="Surename :"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text9"
            android:layout_toEndOf="@+id/text5"
            android:hint="Surename"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#f90b0b"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewFirstName"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text8"
            android:layout_toEndOf="@+id/text5"
            android:hint="Firstname"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/text"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text5"
            android:layout_toEndOf="@+id/text5"
            android:hint="Gender"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/text"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewDateBirth"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text5"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/text5"
            android:hint="Date Birth"
            android:textColor="@color/text"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textID"
            android:layout_toEndOf="@+id/textViewCountry"
            android:gravity="left|center_horizontal"
            android:hint="User :"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryD"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textViewMobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text5"
            android:layout_toEndOf="@+id/text5"
            android:hint="email"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            tools:ignore="NewApi" />

        <TextView
            android:id="@+id/textViewCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text6"
            android:layout_toEndOf="@+id/text9"
            android:hint="country"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/text"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text7"
            android:layout_toEndOf="@+id/text8"
            android:hint="mobile no"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/text"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            app:srcCompat="@drawable/person" />

        <TextView
            android:id="@+id/txtCons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/text1"
            android:layout_marginEnd="51dp"
            android:fontFamily="@font/source_sans_pro2"
            android:hint="Const"
            android:textColor="@color/textcolors"
            android:textColorHint="@color/bgColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textColor="@color/textcolors"
            android:textSize="10sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/buttonEditUser"
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit"
            android:text="Edit" />

        <ImageButton
            android:id="@+id/buttonDeleteUser"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/delete"
            android:text="Delete" />

    </RelativeLayout>

</LinearLayout>