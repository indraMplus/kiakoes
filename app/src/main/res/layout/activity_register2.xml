<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".RegisterActivity2">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationReg2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/formColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_reg2" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="368dp"
        android:layout_height="557dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="52dp"
            app:srcCompat="@drawable/kiakoelogos" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:text="Your Membership Login"
            android:textColor="@color/txtColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginTop="98dp"
            android:text="Username *"
            android:textColor="@color/txtColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginTop="128dp"
            android:text="E-mail address *"
            android:textColor="@color/txtColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginTop="158dp"
            android:text="Confirm email addres *"
            android:textColor="@color/txtColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginTop="228dp"
            android:text="Password *"
            android:textColor="@color/txtColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton"
            style="@android:style/Widget.Material.CompoundButton.RadioButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/etUsername"
            android:layout_marginTop="197dp"
            android:background="@drawable/border"
            android:text="RadioButton" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/radioButton"
            android:layout_marginEnd="103dp"
            android:layout_marginRight="103dp"
            android:text="Show Password"
            android:textColor="@color/txtColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_centerVertical="true"
            android:text="Confirm Password"
            android:textColor="@color/txtColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginBottom="229dp"
            android:text="Password hint"
            android:textColor="@color/txtColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="2 / 3"
            android:textColor="@color/txColor" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtUserName"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="@string/hint_user"
            android:inputType="textPersonName"
            android:textColor="@color/txColor"
            android:textColorHint="@color/txColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="180dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/etUsername"
            android:layout_alignStart="@+id/etUsername"
            android:layout_alignTop="@+id/textView10"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textColor="@color/txColor"
            android:textColorHint="@color/txColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etConfirmEmail"
            android:layout_width="212dp"
            android:layout_height="16dp"
            android:layout_alignLeft="@+id/etUsername"
            android:layout_alignStart="@+id/etUsername"
            android:layout_alignTop="@+id/textView11"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="@string/hint_email_confirm"
            android:inputType="textEmailAddress"
            android:textColor="@color/txColor"
            android:textColorHint="@color/txColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="212dp"
            android:layout_height="16dp"
            android:layout_alignStart="@+id/etUsername"
            android:layout_alignTop="@+id/textView12"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/txColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="213dp"
            android:layout_height="17dp"
            android:layout_alignStart="@+id/etUsername"
            android:layout_centerVertical="true"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/txColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etHintPass"
            android:layout_width="213dp"
            android:layout_height="16dp"
            android:layout_alignStart="@+id/etUsername"
            android:layout_alignTop="@+id/textView15"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="@string/hint_pass_confirm"
            android:inputType="textPersonName"
            android:textColor="@color/txColor"
            android:textColorHint="@color/txColor"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>